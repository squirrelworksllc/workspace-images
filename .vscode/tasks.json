{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docker: Build (menu)",
      "type": "shell",
      "command": "bash",
      "args": ["-lc", ".vscode/docker-build.sh"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "close": false
      },
      "problemMatcher": []
    }
  ]
}
